<script>
let yesScale = 1;

function moveNo() {
  const noBtn = document.getElementById("noBtn");
  const maxX = 220;
  const maxY = 100;
  const x = Math.random() * maxX;
  const y = Math.random() * maxY;
  noBtn.style.left = x + "px";
  noBtn.style.top = y + "px";

  yesScale += 0.15;
  document.getElementById("yesBtn").style.transform = `translateX(-50%) scale(${yesScale})`;
}

function yesClick() {
  document.body.innerHTML = `
    <h1 style="color:#ff4d6d;">YAY!!! ðŸ’•ðŸ¥°</h1>
    <p style="font-size:1.5rem;">Best decision ever ðŸ˜ŒðŸ’˜</p>
    <div class="images">
      <img src="me.jpg" alt="Me">
      <img src="yujoung.jpg" alt="Yujoung">
    </div>
  `;
}
</script>

